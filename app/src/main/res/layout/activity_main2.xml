<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#263238">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#78909C">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POLIEDUCA"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp"/>

        <!-- Sección de navegación -->
        <LinearLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botón de menú (toggle) -->
            <Button
                android:id="@+id/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="☰"
                android:background="#CFD8DC"
                android:textColor="#000000"
                android:visibility="gone" />

            <!-- Lista de items de navegación -->
            <LinearLayout
                android:id="@+id/menu_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 1"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="#90A4AE" />

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 2"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="#90A4AE" />

                <TextView
                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 3"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="#90A4AE" />

                <TextView
                    android:id="@+id/item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 4"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="#90A4AE" />

                <TextView
                    android:id="@+id/item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item 5"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="#90A4AE" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Contenido Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <GridLayout
            android:id="@+id/grid_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:alignmentMode="alignMargins"
            android:padding="8dp"
            android:columnOrderPreserved="false">

            <!-- Card 1 -->
            <LinearLayout
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/form_rectangle"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/card1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:textSize="18sp"
                    android:background="#B0BEC5"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/card1_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet..."
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/card1_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button"
                    android:background="#183153"
                    android:textColor="#ffffff"
                    android:padding="12dp" />
            </LinearLayout>


            <!-- Otras cards se pueden agregar de forma similar -->
        </GridLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#78909C"
        android:gravity="center">
        <TextView
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POLIEDUCA ©"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>