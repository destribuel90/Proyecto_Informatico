<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">12dp</item>
    </style>
    <!-- ThemeOverlay para tu PopupMenu -->
    <style name="ThemeOverlay.MyApp.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <!-- Fondo del popup -->
        <item name="android:popupBackground">@color/popup_bg</item>
        <!-- Tint para iconos -->

        <item name="android:itemTextAppearance">@style/MyPopupMenuTextAppearance</item>
    </style>

    <!-- Apariencia de texto dentro del popup -->
    <style name="MyPopupMenuTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/nav_item_color</item>
    </style>

</resources>